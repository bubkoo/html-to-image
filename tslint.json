{
  "extends": [
    "tslint-config-airbnb",
    "tslint-eslint-rules",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": ["./es/**/*.d.ts", "./lib/**/*.d.ts"]
  },
  "rules": {
    "no-construct": true,
    "no-debugger": true,
    "no-reference": true,
    "import-name": false,
    "semicolon": [true, "never"]
  }
}
